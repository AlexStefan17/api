<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php" colors="true" stopOnFailure="false">
    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>unitTest</directory>
        </testsuite>
    </testsuites>

    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">v0</directory>
            <directory suffix=".php">v1</directory>
            <directory suffix=".php">v3</directory>
            <directory suffix=".php">v4</directory>
            <directory suffix=".php">v5</directory>
            <directory suffix=".php">v6</directory>
        </include>
    </coverage>
</phpunit>
